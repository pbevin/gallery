<h1>Listing photos</h1>

<% @photos.each do |photo| %>
  <div class="photo">
    <%= link_to(image_tag(photo.image_url(:thumb)), photo) if photo.image? %>
    <div class="title"><%= photo.title %></div>
    <div class="actions">
      <%= link_to "edit", edit_photo_path(photo) %> |
      <%= link_to "remove", photo, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div>
<% end %>

<br clear="all" />

<%= form_for Photo.new do |f| %>
  <%= f.label :image, "Upload photos:" %>
  <input id="photo_image" multiple="multiple" name="photo[image]" type="file" />
<% end %>
